<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Pizzaria</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	<link rel="stylesheet" type="text/css" href="~/Content/Dropdown.css" />
</head>
<body>

	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<p class="navbar-brand">~ PizzaRia ~</p>
			</div>
			<div class="navbar">
				@if (User.Identity.IsAuthenticated)
				{
					<a>@Html.ActionLink("Home", "Index", "Home")</a>
					<a>@Html.ActionLink("About", "About", "Home")</a>
					<a>@Html.ActionLink("Order", "PizzaBasePicker", "Order")</a>
					<a>@Html.ActionLink("Manage", "Manage", "Account")</a>
				}

				@if (User.IsInRole("Employee"))
				{
					<a>@Html.ActionLink("Manage_Products", "ManagerChooser", "Home")</a>
				}
			</div>
		</div>
	</div>


	<div class="container body-content">
		<br />
		<br />
		<br />
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - Pizzaria</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
